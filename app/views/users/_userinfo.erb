<div class="container">
	<div class="row">
		<div class="col-lg-3">
<h2>User info</h2>
<%= attachment_image_tag @user, :image, :fill, 60, 60, class: "pull-left profile-thumb", fallback: "no_image.jpg",:size => "60x60" %>
<table class="table">
	<tr>
		<th>name</th>
		<th><%= @user.name %></th>
	</tr>
	<br>
	<tr>
		<th>introduction</th>
		<th><%= @user.introduction %></th>
	</tr>
</table>
<br>
<% if @user == current_user %>
<%= link_to '', edit_user_path(current_user.id), class:"col-lg-12 btn btn-default glyphicon glyphicon-wrench edit_user_#{user.id}" %>
<% else %>
<%= link_to "", user_path(current_user.id), class:"col-lg-12 btn btn-default glyphicon glyphicon-wrench users_#{user.id}" %>
<% end %>