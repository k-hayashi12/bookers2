<% if @book_show.errors.any? %>
	<div id="error_explanation" class="alert alert-danger">
		<h2><%= pluralize(@book_show.errors.count, "error") %> prohibited this user from being saved:</h2>
          <ul>
           <% @book_show.errors.full_messages.each do |message| %>
              <li><%= message %></li>
           <% end %>
          </ul>
    </div>
<% end %>

<%= render "users/userinfo", user: @user %>
<%= render "newbook", book_show: @book_show %>

<div class="col-lg-9">
<h2>Books</h2>
<table class="table table-hover table-inverse">
	<thead>
		<tr>
			<th>Title</th>
			<th>Opinion</th>
		</tr>

	</thead>
		<tbody>
			<% @books.each do |book| %>
			<tr>
				<td><%= link_to book.title, book_path(book), class:"book_#{book.id}" %></td>
				<td><%= book.opinion %></td>
			</tr>
			<% end %>
		</tbody>
</table>
</div>
</div>
</div>