<% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
<% end %>

<%= render "users/userinfo", user: @user %>
<%= render "newbook", book_show: @book_show %>

<div class="col-lg-9">
<h2>Book detail </h2>
<table class="table table-hover table-inverse">
	<thead>
		<tr>
			<th>Title</th>
			<th>Opinion</th>

		</tr>

	</thead>
		<tbody>
			<tr>
				<td><%= @book.title %></td>
				<td><%= @book.opinion %></td>
		<% if @book.user_id == current_user.id %>
				<td><%= link_to "Edit", edit_book_path, class: 'btn btn-success edit_book_#{@book.id}' %></td>
				<td><%= link_to 'Destroy', book_path(@book),  method: :delete, data: {confirm: "本当に削除しますか？？"}, class: "btn btn-danger destroy_book_#{@book.id}" %></td>
					<% end %>
			</tr>
		</tbody>
</table>
</div>
</div>
</div>
