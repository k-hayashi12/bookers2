<h1>Editing Book</h1>

<% if @book.errors.any? %>
  <div id="error_explanation" class="alert alert-danger">
    <h2><%= pluralize(@book.errors.count, "error") %> prohibited this user from being saved:</h2>
          <ul>
           <% @book.errors.full_messages.each do |message| %>
              <li><%= message %></li>
           <% end %>
          </ul>
    </div>
<% end %>

<%= form_for(@book) do |f| %>
	<p>Title</p>
	<%= f.text_field :title, class:"book_title" %>
    <p>Opinion</p>
    <%= f.text_area :opinion, class:"book_body" %>
    <br>
	<%= f.submit 'Update book', class: 'btn btn-primary' %>
	<p><%= link_to 'Show', book_path(@book.id), class:"book_#{@book.id}" %>
	<%= link_to 'Back', book_path(@book.id), class:"back"%>
	</p>
<% end %>